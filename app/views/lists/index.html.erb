<div class="banner" style="background-image, url(<%= asset_path('movie.jpg')%>)">
  <h1>List your favorites Movies</h1>
</div>


<div class="container">
  <div class="row lists">
    <h1>Lists</h1>
  </div>
  <div class="row">
        <% @lists.each do |list| %>
    <div class="col-sm-12 col-md-6 col-lg-4">
      <div class="card mx-auto" style="width: 300px; overflow: hidden;">
      <% if list.photo.key %>
        <%= cl_image_tag list.photo.key, height: 300, width: 300 %>
        <% end %>
        <div class="card-body">
          <div class="card-title">
            <%=link_to list.name, list_path(list.id) %>
          </div>
          <div class="card-action">
            <%= link_to "Delete",
            list_path(list),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
            class:"btn btn-primary" %>
          </div>
        </div>
    </div>
  </div>
      <% end %>
</div>

<%= render 'modal' %>
